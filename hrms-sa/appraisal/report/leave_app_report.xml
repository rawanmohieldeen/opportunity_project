<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="leave_application_report" model="ir.actions.report">
        <field name="name">Leave Application Form</field>
        <field name="model">leave.application.form</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">appraisal.leave_app_temp</field>
        <field name="report_file">appraisal.leave_app_temp</field>
        <field name="binding_model_id" ref="model_leave_application_form"/>
        <field name="binding_type">report</field>
    </record>
    <template id="leave_app_temp">
        <t t-call="web.external_layout">
            <t t-call="web.html_container">
                <div class="page">
                    <table style="width:100%" class="table table-bordered">
                        <caption>EMPLOYEE DETAILS</caption>
                        <t t-foreach="docs" t-as="o">
                            <tr>
                                <th>Form No</th>
                                <td>
                                    <strong>/HR/Form 020</strong>
                                </td>

                            </tr>
                            <tr>
                                <th>Form Title</th>
                                <td>
                                    <strong>Leave Application Form</strong>
                                </td>

                            </tr>
                            <tr>
                                <th></th>
                                <td></td>

                            </tr>
                        </t>
                    </table>
                    <table style="width:100%" class="table table-bordered">
                        <caption>Part 1: LEAVE DETAILS â€“ To be filled by employee</caption>
                        <t t-foreach="docs" t-as="o">
                            <tr>
                                <td>Employee ID</td>
                                <td>
                                    <span t-field="o.name"/>
                                </td>
                                <!--                                <td></td>-->

                            </tr>
                            <tr>
                                <td>
                                    Employee Name
                                </td>
                                <td>
                                    <span t-field="o.employee_name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Department/Project</td>
                                <td>
                                    <span t-field="o.department"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Job Title</td>
                                <td>
                                    <span t-field="o.job_title"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                    <p>Type of Leave</p>
                </div>
            </t>
        </t>
    </template>
</odoo>