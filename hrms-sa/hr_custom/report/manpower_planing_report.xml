<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--report Manpower planing form-->
        <record id="report_manpower_planing" model="ir.actions.report">
            <field name="name">Manpower Planing Form</field>
            <field name="model">annual.departmental.manpower.planning</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">hr_custom.manpower_planing_temp</field>
            <field name="report_file">hr_custom.manpower_planing_temp</field>
            <field name="binding_model_id" ref="model_annual_departmental_manpower_planning"/>
            <field name="binding_type">report</field>
        </record>
        <template id="manpower_planing_temp">
            <t t-call="web.external_layout">
                <t t-call="web.basic_layout">
                    <div class="page">

                        <table style="width:100%" class="table table-bordered">
                            <t t-foreach="docs" t-as="o">

                                <tr>
                                    <th>Form No</th>
                                    <td>
                                        <strong>/HR/Form 003</strong>
                                    </td>

                                </tr>
                                <tr>
                                    <th>Form Title</th>
                                    <td>
                                        <strong>Manpower Planning Form</strong>
                                    </td>

                                </tr>
                                <tr>
                                    <th></th>
                                    <td></td>

                                </tr>
                            </t>
                        </table>
                        <table style="width:100%" class="table table-bordered">
                            <caption>Annual Departmental Manpower Planning</caption>
                            <t t-foreach="docs" t-as="o">

                                <tr>
                                    <td>Reference Number
                                        <span t-field="o.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Department:
                                        <span t-field="o.department"/>
                                    </td>

                                </tr>
                            </t>
                        </table>
                        <table style="width:100%" class="table table-bordered">
                            <caption>For New Positions, submit “New Position Request Form”, Job Descriptions and any
                                other relevant supporting documentation
                                # Provide relevant supporting justification
                            </caption>

                            <tr>

                                <td>Position</td>
                                <td>Start Date</td>
                                <td>Promote</td>
                                <td>Transfer</td>
                                <td>Replacement</td>
                                <td>Additional</td>
                                <td>Retrench</td>
                                <td>Total</td>

                            </tr>
                            <t t-foreach="o.lines_ids" t-as="lin">
                                <tr>
                                    <td>
                                        <span t-field="lin.position_title"/>
                                    </td>
                                    <td>
                                        <span t-field="lin.date"/>
                                    </td>
                                    <td>
                                        <span t-field="lin.promote"/>
                                    </td>
                                    <td>
                                        <span t-field="lin.transfer"/>
                                    </td>
                                    <td>
                                        <span t-field="lin.replacement"/>
                                    </td>
                                    <td>
                                        <span t-field="lin.additional"/>
                                    </td>
                                    <td>
                                        <span t-field="lin.retrench"/>
                                    </td>
                                    <td>
                                        <span t-esc="lin.total"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                        <p>Comments:</p>
                        <table cellpadding="2" cellspacing="4" class="table table-bordered" width="100%">
                            <t t-foreach="o.lines_ids" t-as="com">
                                <span t-field="com.comments"/>
                                <tr>
                                </tr>
                                <tr></tr>
                            </t>
                        </table>
                        <table class="table table-bordered">
                            <t t-foreach="docs" t-as="o">
                            <tr>
                                <td>Initiated by:</td>

                                <td>Reviewed by:</td>
                                <td>Approved by:</td>

                            </tr>
                            <tr>
                                <td style="padding: 30px;">Department Manager’s Signature</td>
                                <td style="padding-top: 10px;">HR Manager’s Signature</td>
                                <td>VP’s Signature</td>

                            </tr>
                            <tr>
                                <td>Date<span t-field="o.date"/> </td>
                                <td>Date:<span t-field="o.date"/></td>
                                <td>Date:<span t-field="o.date"/></td>

                            </tr>
                            </t>
                        </table>

                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>