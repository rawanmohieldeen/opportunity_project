                                <field name="position_title" />
                                <field name="department" />
                                <field name="date" />
                                <field name="promote" />
                                <field name="transfer" />
                                <field name="replacement" />
                                <field name="additional" />
                                <field name="retrench" />
                                <field name="total" />
                                <field name="comments" />
                            </tree>
                           
                        </field>
                    </group>
                  
                    </page>
                </notebook>
            </sheet>
            <!-- <div class="oe_chatter">
